<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="th.co.mediaplex.dooneetv.PaymentPayPointActivity"
    android:gravity="center_vertical|center_horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_paypoint_title"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/font_detail_title" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mpayImageButton"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:src="@drawable/payment_mpay" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/juspayImageButton"
        android:layout_alignTop="@+id/mpayImageButton"
        android:layout_toRightOf="@+id/mpayImageButton"
        android:layout_toEndOf="@+id/mpayImageButton"
        android:src="@drawable/payment_justpay" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tescolotusImageButton"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/juspayImageButton"
        android:layout_toEndOf="@+id/juspayImageButton"
        android:src="@drawable/payment_tescolotus" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thailandpostImageButton"
        android:layout_alignTop="@+id/tescolotusImageButton"
        android:layout_toRightOf="@+id/tescolotusImageButton"
        android:layout_toEndOf="@+id/tescolotusImageButton"
        android:src="@drawable/payment_thailandpost"
        android:nextFocusRight="@+id/bigcImageButton"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bigcImageButton"
        android:src="@drawable/payment_bigc"
        android:layout_below="@+id/mpayImageButton"
        android:layout_alignLeft="@+id/mpayImageButton"
        android:layout_alignStart="@+id/mpayImageButton"
        android:nextFocusRight="@+id/mpayImageButton"
        android:nextFocusLeft="@+id/thailandpostImageButton" />
</RelativeLayout>
