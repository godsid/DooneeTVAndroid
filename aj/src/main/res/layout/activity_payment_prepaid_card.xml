<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="th.co.mediaplex.dooneetv.PaymentPrepaidCardActivity"
    android:gravity="center_horizontal">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_card_title"
        android:id="@+id/textView"
        android:textSize="@dimen/font_detail_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/code1EditText"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:maxLength="4"
            android:hint="XXXX"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:nextFocusRight="@+id/code2EditText"
            android:nextFocusForward="@+id/code2EditText"/>

        <EditText
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/code2EditText"
            android:layout_alignTop="@+id/code1EditText"
            android:layout_toRightOf="@+id/code1EditText"
            android:layout_toEndOf="@+id/code3EditText"
            android:maxLength="4"
            android:hint="XXXX"
            android:textAlignment="center"
            android:nextFocusRight="@+id/code3EditText"
            android:nextFocusForward="@+id/code3EditText" />

        <EditText
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/code3EditText"
            android:layout_alignTop="@+id/code2EditText"
            android:layout_toRightOf="@+id/code2EditText"
            android:layout_toEndOf="@+id/code2EditText"
            android:maxLength="4"
            android:hint="XXXX"
            android:textAlignment="center"
            android:nextFocusRight="@+id/code4EditText"
            android:nextFocusForward="@+id/code4EditText"/>

        <EditText
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/code4EditText"
            android:layout_toEndOf="@+id/code3EditText"
            android:layout_alignTop="@+id/code3EditText"
            android:layout_toRightOf="@+id/code3EditText"
            android:maxLength="4"
            android:hint="XXXX"
            android:textAlignment="center"
            android:nextFocusRight="@+id/submitButton"
            android:nextFocusForward="@+id/submitButton"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_card_submitbt"
        android:id="@+id/submitButton"
        android:textSize="@dimen/font_detail_subtext"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px" />

</RelativeLayout>
